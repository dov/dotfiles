from pricing.models import * 
from django.contrib import admin

class FeeAdmin(admin.ModelAdmin):
    # this class customised the columns used to display the fees
    list_display = ('chamber', 'framework_panel', 'level_of_court', 'type_of_work', 'seniority', 'fee_2008')
    list_display_links = ('fee_2008',)
    list_filter = ('chamber', 'framework_panel', 'level_of_court', 'type_of_work', 'seniority')
    search_fields = ('chamber', 'framework_panel', 'level_of_court', 'type_of_work', 'seniority')

admin.site.register(Fee, FeeAdmin)
  
class SavedFeeComparisonLineInline(admin.TabularInline):
    model = SavedFeeComparisonLine
    fk_name = 'parent'

class SavedFeeComparisonAdmin(admin.ModelAdmin):
    list_display = ('name','author')
    list_filter = ('author', 'allowed_groups')
    inlines = [
        SavedFeeComparisonLineInline,
    ]

admin.site.register(SavedFeeComparison, SavedFeeComparisonAdmin)

class SavedFeeCalculatorLineInline(admin.TabularInline):
    model = SavedFeeCalculatorLine
    fk_name = 'parent'

class SavedFeeCalculationAdmin(admin.ModelAdmin):
    list_display = ('name','author','chamber','overall_total')
    list_filter = ('author', 'visible','fee_comparison','chamber')
    #inlines = [
    #    SavedFeeCalculatorLineInline,
    #]

admin.site.register(SavedFeeCalculation, SavedFeeCalculationAdmin)

