from django.conf.urls.defaults import * #import * gives default 404 and 500 handlers

pricing_urlpatterns = []

#generic urls from this app:
pricing_urlpatterns = patterns('pricing.views',
    url(r'^$', home, name='home'),
    url(r'^all_fees/$', typed_fees, name='all_fees'),

    url(r'^fixed_fees/$', typed_fees, kwargs={'manager':FF}, name=FF),
    url(r'^hourly_fees/$', typed_fees, kwargs={'manager':HF}, name=HF),
    #url(r'^general_fees/$', typed_fees, kwargs={'manager':GF}, name=GF),

    url(r'^barristers_fixed_fees/$', typed_fees, kwargs={'manager':BFF}, name=BFF),
    url(r'^barristers_hourly_fees/$', typed_fees, kwargs={'manager':BHF}, name=BHF),
    url(r'^barristers_fees/$', typed_fees, kwargs={'manager':BF}, name=BF),
    url(r'^solicitors_fees/$', typed_fees, kwargs={'manager':SF}, name=SF),

    url(r'^chamber_contacts/$', chamber_contacts, name='chamber_contacts'),

    url(r'^chamber/(\d+)/$', chamber_view, name='chamber_view'),
    url(r'^chamber/(?P<chamber_id>\d+)/barristers_for_invoice/(?P<feecalc_id>\d+)/$', chamber_view , name='chamber_for_invoice'),
    url(r'^chamber/(?P<chamber_id>\d+)/barristers_for_seniority/(?P<seniority_id>\d+)/$', chamber_view , name='chamber_for_seniority'),

    url(r'^barristers/$', barristers, name='barristers'),
    url(r'^parameters/([a-z_]+)/([0-9]+)/$', parameter_details, name='parameter_details'),
    url(r'^parameters/$', parameter_details, name='parameter_details'),
    url(r'^appointments/$', appointments, name='appointments'),
    url(r'^definitions/$', definitions, name='definitions'),
    url(r'^worktype/(\d+)/$', worktype_definition, name='worktype_definition'),

    url(r'^invoice_calculator/$', fee_calculator_new, name='fee_calculator_new'),
    url(r'^fee_calculation_view/(\d+)/$', fee_calculation_view, name='fee_calculation_view'),
    url(r'^fee_comparison_setup_new/$', fee_comparison_new, name='fee_comparison_new'),
    url(r'^fee_comparisons_list/$', fee_comparisons_list, name='fee_comparisons_list'),
    url(r'^fee_comparison_view/(\d+)/$', fee_comparison_view, name='fee_comparison_view'),

    url(r'^json/dropdownfields/$', json_dropdownfields, name='json_dropdownfields'),
    url(r'^json/dropdownfields/([a-z_]+)/$', json_dropdownfields, name='json_dropdownfields'),
    url(r'^json/ajax_fees/$', ajax_fees, name='ajax_fees'),
    url(r'^json/field_translations/$', json_field_translations, name='json_field_translations'),
    url(r'^json/field_translations/([a-z_]+)/$', json_field_translations, name='json_field_translations'),
    url(r'^json/fee_calculation_totals/$', json_feecalculator_totals, name='json_feecalculator_totals'),

    url(r'^method_statements_list/$', method_statement_templates,
        name='method_statement_templates'),
    url(r'^method_statements_for_panel/(\d+)/$', method_statements_for_template,
        name='method_statements_for_template'),
    url(r'^method_statement_view/(\d+)/$', method_statement_view,
        name='method_statement_view'),

    url(r'^average_fees/$', average_fees,
        name='average_fees'),
