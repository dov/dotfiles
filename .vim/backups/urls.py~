    url(r'^chamber/(\d+)/barrister/(\d+)/delete$', chamber_barrister_delete,
        name='chamber_barrister_delete'),

    url(r'^chamber/(\d+)/fee_structures/$', chamber_fee_structures,
        name='chamber_fee_structures'),
    url(r'^chamber/(\d+)/fee_structure/new/$', chamber_fee_structure_edit,
